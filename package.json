{
  "name": "fluent-html",
  "version": "5.4.0",
  "description": "Fluent, type-safe HTML builder for TypeScript. Chainable styling API, first-class HTMX support with full autocomplete, automatic XSS protection. Zero dependencies, SSR-ready.",
  "type": "commonjs",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "npm run build && node dist/test/test.js && node dist/test/patterns.js && node dist/test/swiftui-style.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm run build && npm test"
  },
  "files": [
    "dist/src/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JT-Digital-d-o-o/fluent-html.git"
  },
  "keywords": [
    "html-builder",
    "typescript",
    "fluent-api",
    "type-safe",
    "htmx",
    "tailwind",
    "server-side-rendering",
    "ssr",
    "html",
    "xss-protection",
    "zero-dependencies",
    "functional-html",
    "chainable",
    "jsx-alternative"
  ],
  "author": "JT Digital d.o.o.",
  "contributors": [
    "Toni K. Turk"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JT-Digital-d-o-o/fluent-html/issues"
  },
  "homepage": "https://github.com/JT-Digital-d-o-o/fluent-html#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "typescript": "^5.0.0"
  }
}
